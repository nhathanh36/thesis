<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/bg_gen_menu">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/volume_icon_home"
        android:layout_gravity="right" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/title"
        android:layout_gravity="center"/>

    <!-- menu -->
    <!-- start -->
    <LinearLayout
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_width="100dp"
        android:background="@drawable/bg_menu"
        android:id="@+id/layout_start"
        android:onClick="onStart"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/start"/>

        </LinearLayout>
    <!-- look n choose -->
    <LinearLayout
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_width="130dp"
        android:background="@drawable/bg_menu"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="127dp"
            android:layout_height="40dp"
            android:background="@drawable/look"/>

    </LinearLayout>

    <!-- listen n choose -->
    <LinearLayout
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_width="130dp"
        android:background="@drawable/bg_menu"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="127dp"
            android:layout_height="40dp"
            android:background="@drawable/listen"/>

    </LinearLayout>

    <!-- look n choose -->
    <LinearLayout
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_width="130dp"
        android:background="@drawable/bg_menu"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="127dp"
            android:layout_height="36dp"
            android:background="@drawable/guess"/>

    </LinearLayout>
    <!-- end menu-->

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="right">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ensign1"
            android:layout_gravity="right"/>
    </LinearLayout>
