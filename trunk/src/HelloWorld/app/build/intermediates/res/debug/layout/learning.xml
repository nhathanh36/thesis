<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/d"
    android:weightSum="1"
    android:id="@+id/linearGeneral">

    <!-- ABC and number -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linearHorizal_1"
        android:weightSum="1"
        android:layout_weight="0.09">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="156dp"
            android:gravity="left"
            android:id="@+id/linearTextABC"
            android:weightSum="1"
            android:layout_weight="0.12">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="121dp"
                android:layout_height="112dp"
                android:gravity="left"
                android:background="@drawable/bg1"
                android:id="@+id/linearBgABC">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/abc1"
                    android:id="@+id/imageViewABC" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/abc"
                android:textColor="@android:color/black"
                android:id="@+id/textViewABC" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="154dp"
            android:gravity="right"
            android:id="@+id/linearTextNum"
            android:weightSum="1"
            android:layout_weight="0.62">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="120dp"
                android:layout_height="96dp"
                android:gravity="right"
                android:background="@drawable/bg2"
                android:id="@+id/linearBgNum"
                android:weightSum="1"
                android:layout_weight="0.50">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/num_1"
                    android:id="@+id/imageViewNum" />

            </LinearLayout>

            <TextView
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:text="@string/number"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black"
                android:id="@+id/textViewNum"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Animal and flower-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linearHorizal_2"
        android:weightSum="1"
        android:layout_weight="0.09">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="156dp"
            android:gravity="left"
            android:id="@+id/linearTextFlower"
            android:weightSum="1"
            android:layout_weight="0.12">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="121dp"
                android:layout_height="112dp"
                android:gravity="left"
                android:background="@drawable/bg2"
                android:id="@+id/linearBgFlower">

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/flower"
                android:textColor="@android:color/black"
                android:id="@+id/textViewFlower" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="154dp"
            android:gravity="right"
            android:id="@+id/linearTextAnimal"
            android:weightSum="1"
            android:layout_weight="0.62">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="120dp"
                android:layout_height="96dp"
                android:gravity="right"
                android:id="@+id/linearBgAnimal"
                android:background="@drawable/bg1"
                android:weightSum="1"
                android:layout_weight="0.50">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/animal"
                    android:id="@+id/imageViewAnimal" />

            </LinearLayout>

            <TextView
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:text="@string/animal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black"
                android:id="@+id/textViewAnimal"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Geometry and Ensign-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linearHorizal_3"
        android:weightSum="1"
        android:layout_weight="0.09">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="156dp"
            android:gravity="left"
            android:id="@+id/linearTextGeometry"
            android:weightSum="1"
            android:layout_weight="0.12">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="121dp"
                android:layout_height="112dp"
                android:gravity="left"
                android:background="@drawable/bg1"
                android:id="@+id/linearBgGeometry">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:id="@+id/imageViewGeometry" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/geometry"
                android:textColor="@android:color/black"
                android:id="@+id/textViewGeometry" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="154dp"
            android:gravity="right"
            android:id="@+id/linearTextEnsign"
            android:weightSum="1"
            android:layout_weight="0.62">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="120dp"
                android:layout_height="96dp"
                android:gravity="right"
                android:background="@drawable/bg2"
                android:id="@+id/linearBgEnsign"
                android:weightSum="1"
                android:layout_weight="0.50">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ensign1"
                    android:id="@+id/imageViewEnsign" />

            </LinearLayout>

            <TextView
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:text="@string/ensign"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black"
                android:id="@+id/textViewEnsign"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
