<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/background_main">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/home_volume"
        android:layout_gravity="right"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_title"
        android:layout_gravity="center">
    </ImageView>

    <!-- menu -->
    <!-- start -->
    <LinearLayout
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_width="140dp"
        android:background="@drawable/home_bg_menu"
        android:id="@+id/layout_start"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="HỌC TỪ MỚI"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="8pt"
            android:gravity="center"
            />


    </LinearLayout>

    <!-- look n choose -->
    <LinearLayout
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_width="140dp"
        android:background="@drawable/home_bg_menu"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="TRÒ CHƠI"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="8pt"
            android:id="@+id/trochoi"
            android:gravity="center"
            />

    </LinearLayout>

    <!-- listen n choose -->
    <LinearLayout
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_width="140dp"
        android:background="@drawable/home_bg_menu"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="GIỚI THIỆU"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="8pt"
            android:gravity="center"
            />

    </LinearLayout>

    <!-- look n choose -->
    <LinearLayout
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_width="140dp"
        android:background="@drawable/home_bg_menu"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="CÀI ĐẶT"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="8pt"
            android:gravity="center"
            />

        <ImageView
            android:layout_width="134dp"
            android:layout_height="35dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/home_guess"/>

    </LinearLayout>
    <!-- end menu-->

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="right">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/home_ensign_lang"
            android:layout_gravity="right"/>


   </LinearLayout>
</LinearLayout><!-- From: file:/D:/THESIS/Tools/MyProject/trunk/src/EnglishForKid/app/src/main/res/layout/home_activity.xml -->